---
import SearchBox from './SearchBox.astro';
import { Users, Heart, Clock, Shield, MapPin } from 'lucide-astro';

// Importar imágenes
const images = [
  'https://images.unsplash.com/photo-1534528741775-53994a69daeb?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=300&ixid=MnwxfDB8MXxyYW5kb218MHx8cG9ydHJhaXQsd29tYW4sc21pbGV8fHx8fHwxNjQ1MjM5NjIw&ixlib=rb-1.2.1&q=80&w=200',
  'https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=300&ixid=MnwxfDB8MXxyYW5kb218MHx8cG9ydHJhaXQsd29tYW4sc21pbGV8fHx8fHwxNjQ1MjM5NjIw&ixlib=rb-1.2.1&q=80&w=200',
  'https://images.unsplash.com/photo-1544005313-94ddf0286df2?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=300&ixid=MnwxfDB8MXxyYW5kb218MHx8cG9ydHJhaXQsd29tYW4sc21pbGV8fHx8fHwxNjQ1MjM5NjIw&ixlib=rb-1.2.1&q=80&w=200',
  'https://images.unsplash.com/photo-1554151228-14d9def656e4?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=300&ixid=MnwxfDB8MXxyYW5kb218MHx8cG9ydHJhaXQsd29tYW4sc21pbGV8fHx8fHwxNjQ1MjM5NjIw&ixlib=rb-1.2.1&q=80&w=200'
];
---

<div class="relative w-full max-w-6xl mx-auto mt-32 text-center">
  <!-- Efectos de fondo -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-64 h-64 bg-accent/30 rounded-full filter blur-3xl animate-float"></div>
    <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-interactive/30 rounded-full filter blur-3xl animate-float-delayed"></div>
  </div>

  <!-- Contenido principal -->
  <div class="space-y-8">
    <!-- Título y subtítulo -->
    <div class="space-y-4">
      <h1 class="text-4xl md:text-6xl font-display text-surface-light mb-6 animate-fade-in">
        Encuentra tu 
        <span class="relative inline-block">
          <span class="relative z-10 text-accent">momento especial</span>
          <svg class="absolute -bottom-2 left-0 w-full" viewBox="0 0 100 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 10 Q25 0, 50 10 T100 10" fill="none" stroke="currentColor" stroke-width="2" class="text-accent/30"/>
          </svg>
        </span>
      </h1>
      
      <p class="text-lg md:text-xl text-surface-light/80 mb-12 animate-fade-in max-w-2xl mx-auto">
        Descubre experiencias únicas y exclusivas, cuidadosamente seleccionadas para ti
      </p>
    </div>

    <!-- Buscador -->
    <SearchBox />

    <!-- Estadísticas -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-16">
      {[
        { icon: Users, number: '2,500+', label: 'Usuarios Activos' },
        { icon: Heart, number: '98%', label: 'Satisfacción' },
        { icon: Clock, number: '24/7', label: 'Soporte' },
        { icon: Shield, number: '100%', label: 'Discreto' },
      ].map(({ icon: Icon, number, label }) => (
        <div class="glass-panel p-4 text-center">
          <Icon size={24} class="text-accent mx-auto mb-2" />
          <div class="text-2xl font-display text-accent mb-1">{number}</div>
          <div class="text-sm text-surface-light/70">{label}</div>
        </div>
      ))}
    </div>

    <!-- Galería de imágenes destacadas -->
    <div class="relative mt-20">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-6xl mx-auto">
        {images.map((src, i) => (
          <div class="relative aspect-[2/3] glass-panel overflow-hidden group cursor-pointer">
            <div class="absolute inset-0 bg-gradient-to-t from-primary via-transparent to-transparent opacity-60 z-10"></div>
            <img 
              src={src}
              alt="Preview" 
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div class="absolute bottom-0 left-0 right-0 p-4 text-left z-20">
              <div class="text-sm font-semibold text-surface-light">Premium</div>
              <div class="text-xs text-surface-light/70 flex items-center gap-1">
                <MapPin size={12} />
                <span>Santiago Centro</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes float-delayed {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float 6s ease-in-out infinite;
    animation-delay: 3s;
  }
</style>
