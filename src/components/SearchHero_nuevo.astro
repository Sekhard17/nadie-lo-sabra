---
import { Sparkles, ArrowRight, Heart } from 'lucide-astro';
import SearchBox from './SearchBox.astro';
---

<section class="relative pt-24 pb-16 md:pt-28 md:pb-20 lg:pt-32 lg:pb-24 px-4 overflow-hidden">
  <!-- Fondo con efectos visuales -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <!-- Gradiente de fondo -->
    <div class="absolute inset-0 bg-gradient-to-b from-background via-background/95 to-background"></div>
    
    <!-- Patrones y texturas -->
    <div class="absolute inset-0 bg-[url('/images/pattern-dots.svg')] opacity-10"></div>
    
    <!-- C칤rculos de luz con blur -->
    <div class="absolute top-1/4 -left-20 w-80 h-80 rounded-full bg-purple-600/10 blur-[100px]"></div>
    <div class="absolute bottom-1/4 -right-20 w-80 h-80 rounded-full bg-accent/10 blur-[100px]"></div>
  </div>

  <div class="max-w-6xl mx-auto relative">
    <!-- Contenido principal con animaciones -->
    <div class="text-center mb-10 md:mb-14">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-accent/10 text-accent text-sm mb-6 animate-fade-in">
        <Sparkles size={16} class="mr-2 animate-pulse-slow" />
        <span>La experiencia que mereces</span>
      </div>
      
      <!-- T칤tulo con animaci칩n "caliente" -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-display text-surface-light mb-6 md:mb-8 leading-tight tracking-tight">
        <span class="animate-title-word-1 inline-block">Descubre</span> 
        <span class="text-gradient bg-gradient-to-r from-accent via-purple-500 to-pink-500 relative inline-block animate-title-word-2">
          experiencias
          <span class="absolute -bottom-1 left-0 w-full h-1.5 bg-gradient-to-r from-accent via-purple-500 to-pink-500 rounded-full opacity-70 animate-pulse-slow"></span>
          <span class="absolute -inset-1 bg-gradient-to-r from-accent/20 to-pink-500/20 blur-sm rounded-lg animate-glow"></span>
        </span> 
        <br class="hidden sm:block" />
        <span class="animate-title-word-3 inline-block">칰nicas</span>
        <span class="animate-fire">游댠</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-surface-light/80 max-w-3xl mx-auto mb-10 md:mb-12 leading-relaxed animate-fade-in-delayed">
        La plataforma m치s discreta y exclusiva para encontrar compa침칤a de calidad
      </p>
    </div>
    
    <!-- Buscador con efecto de elevaci칩n -->
    <div class="relative z-10 max-w-4xl mx-auto transform hover:-translate-y-1 transition-all duration-300">
      <div class="absolute -inset-1.5 bg-gradient-to-r from-accent/20 to-purple-600/20 rounded-2xl blur-lg opacity-70"></div>
      <div class="relative">
        <SearchBox />
      </div>
      
      <!-- Etiquetas populares -->
      <div class="flex flex-wrap justify-center gap-2 mt-6">
        <span class="text-sm text-surface-light/60 mr-2">Popular:</span>
        {["VIP", "Masajes", "Escorts", "Citas"].map((tag) => (
          <a href={`/buscar?tag=${tag}`} class="px-3 py-1 text-xs rounded-full border border-white/10 text-surface-light/80 hover:border-accent/30 hover:text-accent hover:bg-accent/5 transition-all">
            {tag}
          </a>
        ))}
      </div>
    </div>
    
    <!-- CTA adicional -->
    <div class="mt-10 text-center animate-fade-in-delayed-more">
      <a href="/explorar" class="inline-flex items-center gap-2 text-accent hover:text-accent/80 transition-colors group">
        <span>Explorar todas las categor칤as</span>
        <ArrowRight size={16} class="group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
  
  <!-- Nueva secci칩n de im치genes de mujeres atractivas -->
  <div class="mt-16 md:mt-20 max-w-7xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-display text-surface-light text-center mb-8 relative inline-block mx-auto">
      <span class="relative z-10">Nuestras mejores acompa침antes</span>
      <span class="absolute bottom-0 left-0 w-full h-1 bg-accent/30"></span>
    </h2>
    
    <!-- Galer칤a de im치genes con efecto de hover -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3 md:gap-4 px-2 md:px-4">
      {[1, 2, 3, 4, 5].map((index) => (
        <div class="aspect-[3/4] relative group overflow-hidden rounded-xl model-card model-card-{index}">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent z-10"></div>
          <div class="absolute bottom-3 left-3 right-3 z-20 transition-all duration-300 group-hover:bottom-4">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white text-sm font-medium">Nombre {index}</h3>
                <p class="text-white/70 text-xs">Santiago</p>
              </div>
              <div class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center backdrop-blur-sm">
                <Heart size={14} class="text-white group-hover:text-accent transition-colors" />
              </div>
            </div>
          </div>
          
          <!-- Bot칩n de ver perfil que aparece al hacer hover -->
          <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-20">
            <a href={`/perfil/${index}`} class="px-4 py-2 bg-accent/90 backdrop-blur-sm rounded-full text-white text-sm transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              Ver perfil
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Ver m치s -->
    <div class="text-center mt-8">
      <a href="/explorar" class="inline-block px-6 py-3 bg-accent/10 hover:bg-accent/20 text-accent rounded-full transition-all">
        Ver todas las acompa침antes
      </a>
    </div>
  </div>
</section>

<style>
  /* Animaciones para el t칤tulo "caliente" */
  @keyframes title-word-1 {
    0% { opacity: 0; transform: translateY(-20px); }
    20% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes title-word-2 {
    0% { opacity: 0; transform: translateY(-20px); }
    20% { opacity: 0; transform: translateY(-20px); }
    40% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes title-word-3 {
    0% { opacity: 0; transform: translateY(-20px); }
    40% { opacity: 0; transform: translateY(-20px); }
    60% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes fire {
    0% { opacity: 0; transform: translateY(-20px) scale(0.5); }
    60% { opacity: 0; transform: translateY(-20px) scale(0.5); }
    80% { opacity: 1; transform: translateY(0) scale(1.2); }
    90% { transform: translateY(0) scale(0.9); }
    100% { transform: translateY(0) scale(1); }
  }
  
  @keyframes glow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.8; }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }
  
  .animate-title-word-1 {
    animation: title-word-1 1.5s ease forwards;
  }
  
  .animate-title-word-2 {
    animation: title-word-2 1.5s ease forwards;
  }
  
  .animate-title-word-3 {
    animation: title-word-3 1.5s ease forwards;
  }
  
  .animate-fire {
    display: inline-block;
    animation: fire 2s ease forwards;
    margin-left: 0.2em;
  }
  
  .animate-glow {
    animation: glow 3s ease-in-out infinite;
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }
  
  /* Animaciones para el t칤tulo y texto */
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease forwards;
  }
  
  .animate-fade-in-delayed {
    animation: fade-in 0.8s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }
  
  .animate-fade-in-delayed-more {
    animation: fade-in 0.8s ease forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
  
  /* Efecto de gradiente en texto */
  .text-gradient {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: text-gradient-animation 4s ease infinite;
  }
  
  @keyframes text-gradient-animation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Estilos para las tarjetas de modelos */
  .model-card {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .model-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  /* Responsive design improvements */
  @media (max-width: 640px) {
    .model-card {
      aspect-ratio: 1/1.3;
    }
  }
  
  /* Fondos de tarjetas */
  .model-card-1 {
    background: linear-gradient(to right bottom, #ff9a9e, #fad0c4);
  }
  
  .model-card-2 {
    background: linear-gradient(to right bottom, #a18cd1, #fbc2eb);
  }
  
  .model-card-3 {
    background: linear-gradient(to right bottom, #ffecd2, #fcb69f);
  }
  
  .model-card-4 {
    background: linear-gradient(to right bottom, #ff8177, #ff867a);
  }
  
  .model-card-5 {
    background: linear-gradient(to right bottom, #d4fc79, #96e6a1);
  }
</style>
