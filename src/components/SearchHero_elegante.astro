---
import { Sparkles, ArrowRight, Heart, MapPin, Calendar, Star } from 'lucide-astro';
import SearchBox from './SearchBox.astro';
---

<section class="relative pt-12 pb-16 md:pt-16 md:pb-20 lg:pt-20 lg:pb-24 px-0 overflow-hidden">
  <!-- Fondo con efectos visuales mejorados -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <!-- Patrones y texturas -->
    <div class="absolute inset-0 bg-[url('/images/pattern-dots.svg')] opacity-10"></div>
  </div>

  <div class="max-w-6xl mx-auto relative">
    <!-- Contenido principal con animaciones -->
    <div class="text-center mb-10 md:mb-14">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-accent/10 text-accent text-sm mb-6 animate-fade-in">
        <Sparkles size={16} class="mr-2 animate-pulse-slow" />
        <span>La experiencia que mereces</span>
      </div>
      
      <!-- Título con animación mejorada -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-display text-surface-light mb-6 md:mb-8 leading-tight tracking-tight">
        <span class="animate-title-word-1 inline-block">Descubre</span> 
        <span class="text-gradient bg-gradient-to-r from-accent via-purple-500 to-pink-500 relative inline-block animate-title-word-2">
          experiencias
        </span> 
        <br class="hidden sm:block" />
        <span class="animate-title-word-3 inline-block">únicas</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-surface-light/80 max-w-3xl mx-auto mb-10 md:mb-12 leading-relaxed animate-fade-in-delayed">
        La plataforma más discreta y exclusiva para encontrar compañía de calidad
      </p>
    </div>
    
    <!-- Buscador con efecto de elevación -->
    <div class="relative z-10 max-w-4xl mx-auto transform hover:-translate-y-1 transition-all duration-300">
      <div class="absolute -inset-1.5 bg-gradient-to-r from-accent/20 to-purple-600/20 rounded-2xl blur-lg opacity-70"></div>
      <div class="relative">
        <SearchBox />
      </div>
      
      <!-- Etiquetas populares -->
      <div class="flex flex-wrap justify-center gap-2 mt-6">
        <span class="text-sm text-surface-light/60 mr-2">Popular:</span>
        {["VIP", "Masajes", "Escorts", "Citas"].map((tag) => (
          <a href={`/buscar?tag=${tag}`} class="px-3 py-1 text-xs rounded-full border border-white/10 text-surface-light/80 hover:border-accent/30 hover:text-accent hover:bg-accent/5 transition-all">
            {tag}
          </a>
        ))}
      </div>
    </div>
    
    <!-- CTA adicional -->
    <div class="mt-10 text-center animate-fade-in-delayed-more">
      <a href="/explorar" class="inline-flex items-center gap-2 text-accent hover:text-accent/80 transition-colors group">
        <span>Explorar todas las categorías</span>
        <ArrowRight size={16} class="group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
  
  <!-- Sección de escorts elegante -->
  <div class="mt-16 md:mt-20 max-w-7xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-display text-surface-light text-center mb-8">
      <span class="text-gradient bg-gradient-to-r from-accent via-purple-500 to-pink-500">Escorts Destacadas</span>
    </h2>
    
    <!-- Galería de escorts elegante -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-5 md:gap-6">
      {[
        { 
          name: 'Valentina', 
          age: 24,
          location: 'Las Condes',
          rating: 4.9,
          reviews: 127,
          tags: ['VIP', 'Masajes'],
          // IMPORTANTE: Reemplaza con la ruta a tu imagen real
          image: '/images/chica1.jpg' // Ejemplo: '/uploads/valentina.jpg'
        },
        { 
          name: 'Isabella', 
          age: 23,
          location: 'Providencia',
          rating: 4.8,
          reviews: 98,
          tags: ['Premium', 'Citas'],
          // IMPORTANTE: Reemplaza con la ruta a tu imagen real
          image: '/images/chica2.jpg' // Ejemplo: '/uploads/isabella.jpg'
        },
        { 
          name: 'Camila', 
          age: 25,
          location: 'Vitacura',
          rating: 5.0,
          reviews: 156,
          tags: ['VIP', 'Exclusiva'],
          // IMPORTANTE: Reemplaza con la ruta a tu imagen real
          image: '/images/chica3_nueva.jpg' // Ejemplo: '/uploads/camila.jpg'
        },
        { 
          name: 'Sofía', 
          age: 22,
          location: 'Lo Barnechea',
          rating: 4.7,
          reviews: 84,
          tags: ['Premium', 'Masajes'],
          // IMPORTANTE: Reemplaza con la ruta a tu imagen real
          image: '/images/chica4_nueva.jpg' // Ejemplo: '/uploads/sofia.jpg'
        },
      ].map(escort => (
        <div class="escort-card group">
          <div class="relative aspect-[3/4] overflow-hidden rounded-xl">
            <!-- Imagen con efecto de zoom al hover -->
            <div class="absolute inset-0 bg-cover bg-center group-hover:scale-110 transition-transform duration-500" style={`background-image: url('${escort.image}')`}></div>
            
            <!-- Gradiente superior para las etiquetas -->
            <div class="absolute top-0 left-0 right-0 h-24 bg-gradient-to-b from-black/70 to-transparent z-10"></div>
            
            <!-- Etiquetas superiores -->
            <div class="absolute top-3 left-3 right-3 flex justify-between items-start z-20">
              <div class="flex gap-1">
                {escort.tags.map(tag => (
                  <span class="px-2 py-1 text-xs rounded-full bg-accent/80 backdrop-blur-sm text-white font-medium">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="w-8 h-8 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center">
                <Heart size={14} class="text-white group-hover:text-pink-500 transition-colors" />
              </div>
            </div>
            
            <!-- Gradiente inferior para la información -->
            <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-black/90 to-transparent z-10"></div>
            
            <!-- Información de la escort -->
            <div class="absolute bottom-3 left-3 right-3 z-20">
              <div class="flex items-center gap-1 mb-1">
                <div class="flex">
                  {[...Array(5)].map((_, i) => (
                    <Star size={12} class={`${i < Math.floor(escort.rating) ? 'text-yellow-400' : 'text-gray-400'} ${i === Math.floor(escort.rating) && escort.rating % 1 > 0 ? 'text-yellow-400 opacity-50' : ''}`} />
                  ))}
                </div>
                <span class="text-white text-xs font-medium">{escort.rating}</span>
                <span class="text-white/60 text-xs">({escort.reviews})</span>
              </div>
              
              <h3 class="text-white text-lg font-medium">{escort.name}, {escort.age}</h3>
              
              <div class="flex items-center gap-3 mt-1">
                <div class="flex items-center gap-1">
                  <MapPin size={12} class="text-white/70" />
                  <span class="text-white/70 text-xs">{escort.location}</span>
                </div>
                <div class="flex items-center gap-1">
                  <Calendar size={12} class="text-white/70" />
                  <span class="text-white/70 text-xs">Disponible</span>
                </div>
              </div>
              
              <div class="flex items-center justify-end mt-2">
                <a href={`/perfil/${escort.name.toLowerCase()}`} class="px-3 py-1 bg-accent/90 hover:bg-accent rounded-full text-white text-xs transition-colors">
                  Ver perfil
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Ver más escorts -->
    <div class="text-center mt-10">
      <a href="/escorts" class="inline-flex items-center gap-2 px-6 py-3 bg-accent/10 hover:bg-accent/20 text-accent rounded-full transition-all">
        <span>Ver todas las escorts</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Animaciones para el título mejoradas */
  @keyframes title-word-1 {
    0% { opacity: 0; transform: translateY(-20px); }
    20% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes title-word-2 {
    0% { opacity: 0; transform: translateY(-20px); }
    20% { opacity: 0; transform: translateY(-20px); }
    40% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes title-word-3 {
    0% { opacity: 0; transform: translateY(-20px); }
    40% { opacity: 0; transform: translateY(-20px); }
    60% { opacity: 1; transform: translateY(0); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes glow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.8; }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }
  
  .animate-title-word-1 {
    animation: title-word-1 1.5s ease forwards;
  }
  
  .animate-title-word-2 {
    animation: title-word-2 1.5s ease forwards;
  }
  
  .animate-title-word-3 {
    animation: title-word-3 1.5s ease forwards;
  }
  
  .animate-glow {
    animation: glow 3s ease-in-out infinite;
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }
  
  /* Animaciones para el título y texto */
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease forwards;
  }
  
  .animate-fade-in-delayed {
    animation: fade-in 0.8s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }
  
  .animate-fade-in-delayed-more {
    animation: fade-in 0.8s ease forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
  
  /* Estilos para las tarjetas de escorts */
  .escort-card {
    position: relative;
    transition: all 0.3s ease;
    border-radius: 0.75rem;
    overflow: hidden;
  }
  
  .escort-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.3);
  }
  
  /* Estilo para el texto con gradiente */
  .text-gradient {
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  /* NOTA: Elimina estos estilos si estás usando tus propias imágenes */
  .model-card-1 {
    background-image: url('/images/model-1.jpg');
  }
  
  .model-card-2 {
    background-image: url('/images/model-2.jpg');
  }
  
  .model-card-3 {
    background-image: url('/images/model-3.jpg');
  }
  
  .model-card-4 {
    background-image: url('/images/model-4.jpg');
  }
  
  .model-card-5 {
    background-image: url('/images/model-5.jpg');
  }
</style>
