---
interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nadie Lo Sabrá - Tu destino discreto" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Nadie Lo Sabrá</title>
  </head>
  <body class="bg-gradient-to-br from-primary via-primary-dark to-surface-dark min-h-screen">
    <slot />
  </body>
</html>

<style>
  :root {
    --navbar-height: 72px; /* Altura aproximada de la navbar */
  }
  
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }
</style>
