---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import SearchHero from '../components/SearchHero.astro';
---

<Layout title="Inicio">
  <Navbar />
  
  <main class="relative pt-16 md:pt-20">
    <!-- Efectos de fondo -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -left-40 w-60 md:w-80 h-60 md:h-80 bg-accent/20 rounded-full filter blur-3xl"></div>
      <div class="absolute top-60 -right-40 w-60 md:w-80 h-60 md:h-80 bg-interactive/20 rounded-full filter blur-3xl"></div>
    </div>

    <!-- Contenido principal -->
    <div class="relative">
      <SearchHero />

      <!-- Sección de categorías destacadas -->
      <section class="mt-20 md:mt-32 px-4">
        <h2 class="text-2xl md:text-3xl font-display text-surface-light text-center mb-8 md:mb-12">
          Categorías <span class="text-accent">Destacadas</span>
        </h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8 max-w-6xl mx-auto">
          {[
            { title: 'Premium', icon: '👑', desc: 'Experiencias exclusivas' },
            { title: 'Masajes', icon: '💆‍♀️', desc: 'Relax y bienestar' },
            { title: 'Escorts VIP', icon: '⭐', desc: 'Servicio distinguido' },
          ].map(cat => (
            <div class="glass-panel p-4 md:p-6 text-center cursor-pointer transform hover:scale-105 transition-all">
              <div class="text-3xl md:text-4xl mb-3 md:mb-4">{cat.icon}</div>
              <h3 class="text-lg md:text-xl font-display text-surface-light mb-1 md:mb-2">{cat.title}</h3>
              <p class="text-sm md:text-base text-surface-light/70">{cat.desc}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Sección de beneficios -->
      <section class="mt-20 md:mt-32 px-4 mb-16 md:mb-20">
        <h2 class="text-2xl md:text-3xl font-display text-surface-light text-center mb-8 md:mb-12">
          ¿Por qué elegir <span class="text-accent">Nadie Lo Sabrá</span>?
        </h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-8 max-w-6xl mx-auto">
          {[
            { title: 'Discreto', icon: '🔒', desc: 'Tu privacidad es nuestra prioridad' },
            { title: 'Verificado', icon: '✅', desc: 'Perfiles 100% reales' },
            { title: 'Seguro', icon: '🛡️', desc: 'Sistema de pago seguro' },
            { title: 'Soporte 24/7', icon: '💬', desc: 'Estamos siempre para ti' },
          ].map(benefit => (
            <div class="glass-panel p-4 md:p-6 text-center">
              <div class="text-3xl md:text-4xl mb-3 md:mb-4">{benefit.icon}</div>
              <h3 class="text-lg md:text-xl font-display text-surface-light mb-1 md:mb-2">{benefit.title}</h3>
              <p class="text-sm md:text-base text-surface-light/70">{benefit.desc}</p>
            </div>
          ))}
        </div>
      </section>
    </div>
  </main>
</Layout>
