---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import RegionesCobertura from '../components/RegionesCobertura.astro';
---

<Layout title="Anúnciate - Nadie Lo Sabrá">
  <Navbar />
  
  <main class="relative min-h-screen pt-[var(--navbar-height)]">
    <!-- Efectos de fondo -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 -left-40 w-80 h-80 bg-purple-500/20 rounded-full filter blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 -right-40 w-80 h-80 bg-pink-500/20 rounded-full filter blur-3xl animate-pulse"></div>
    </div>

    <!-- Contenido principal -->
    <div class="relative">
      <div class="max-w-4xl mx-auto px-4 py-12">
        <!-- Encabezado elegante -->
        <div class="text-center mb-20 relative">
          <span class="text-accent/60 uppercase tracking-[0.3em] text-sm font-light mb-4 block">
            Tu Éxito es Nuestra Prioridad
          </span>
          <h1 class="text-4xl md:text-6xl font-display text-surface-light mb-6 relative">
            <span class="relative inline-block">
              Destaca tu Presencia
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-accent rounded-full animate-ping"></div>
            </span>
          </h1>
          <p class="text-surface-light/80 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
            Bienvenida a un espacio diseñado para ti, donde tu tiempo y privacidad son nuestra máxima prioridad. 
            Descubre cómo podemos ayudarte a brillar.
          </p>
          
          <!-- Decorative elements -->
          <div class="absolute left-1/2 -translate-x-1/2 -bottom-10 flex space-x-2">
            <div class="w-20 h-[1px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
            <div class="w-10 h-[1px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
            <div class="w-5 h-[1px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
          </div>
        </div>

        <!-- Planes de publicación -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
          {[
            {
              name: 'Esmeralda',
              price: '135.000',
              duration: '7 días',
              features: [
                'Publicación estándar',
                'Hasta 5 fotos',
                'Visibilidad normal',
                'Soporte básico',
                'Renovación manual'
              ]
            },
            {
              name: 'Rubí',
              price: '207.000',
              duration: '15 días',
              featured: true,
              features: [
                'Publicación destacada',
                'Hasta 10 fotos',
                'Mayor visibilidad',
                'Soporte prioritario',
                'Renovación automática'
              ]
            },
            {
              name: 'Diamante',
              price: '270.000',
              duration: '30 días',
              features: [
                'Publicación VIP',
                'Fotos ilimitadas',
                'Máxima visibilidad',
                'Soporte 24/7',
                'Renovación automática',
                'Estadísticas detalladas'
              ]
            }
          ].map(plan => (
            <div class:list={[
              'relative group',
              'glass-panel rounded-2xl overflow-hidden',
              plan.featured ? 'ring-2 ring-accent shadow-lg shadow-accent/20' : ''
            ]}>
              {plan.featured && (
                <>
                  <div class="absolute inset-0 bg-gradient-to-b from-accent/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(168,85,247,0.1),transparent_70%)] group-hover:animate-[pulse_2s_ease-in-out_infinite]"></div>
                </>
              )}
              
              <div class="p-8 relative">
                <div class="absolute top-0 right-0 -mt-2 -mr-2">
                  {plan.featured && (
                    <div class="relative">
                      <div class="absolute inset-0">
                        <div class="w-4 h-4 bg-accent rounded-full animate-ping opacity-75"></div>
                      </div>
                      <div class="relative">
                        <div class="w-4 h-4 bg-accent rounded-full"></div>
                      </div>
                    </div>
                  )}
                </div>

                <h3 class="text-2xl font-display text-surface-light mb-2 group-hover:text-accent transition-colors">
                  {plan.name}
                </h3>
                
                <div class="flex items-baseline mb-2 relative">
                  <span class="text-accent text-lg">$</span>
                  <span class="text-accent text-5xl font-bold group-hover:animate-float">
                    {plan.price}
                  </span>
                </div>
                
                <p class="text-surface-light/60 mb-6">{plan.duration}</p>
                
                <ul class="space-y-3 mb-8">
                  {plan.features.map(feature => (
                    <li class="flex items-center text-surface-light/80 group-hover:text-surface-light transition-colors">
                      <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-sm">{feature}</span>
                    </li>
                  ))}
                </ul>

                <a
                  href="/anunciarse"
                  class:list={[
                    'block w-full py-3 px-6 rounded-lg text-center transition-all duration-300',
                    'text-sm uppercase tracking-wider font-medium transform hover:-translate-y-1',
                    plan.featured 
                      ? 'bg-accent text-white hover:bg-accent/90 shadow-lg shadow-accent/50 hover:shadow-accent/70' 
                      : 'bg-surface-light/10 text-surface-light hover:bg-surface-light/20'
                  ]}
                >
                  Contactar
                </a>
              </div>
            </div>
          ))}
        </div>

        <!-- Separador decorativo -->
        <div class="relative h-px w-full max-w-2xl mx-auto mb-20 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent to-transparent"></div>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent to-transparent animate-shimmer"></div>
        </div>

        <!-- Componente de Regiones -->
        <RegionesCobertura />
      </div>
    </div>
  </main>
</Layout>

<style>
  .glass-panel {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  .animate-shimmer {
    animation: shimmer 2s infinite;
  }
</style>
