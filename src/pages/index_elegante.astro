    <!-- C√≠rculos de luz con blur mejorados -->
    <div class="absolute -top-40 -left-40 w-96 h-96 rounded-full bg-indigo-600/20 blur-[120px] animate-float"></div>
    <div class="absolute top-60 -right-40 w-96 h-96 rounded-full bg-violet-500/20 blur-[120px] animate-float-delayed"></div>
    <div class="absolute bottom-40 left-1/4 w-80 h-80 rounded-full bg-fuchsia-500/15 blur-[100px] animate-pulse"></div>
    <div class="absolute top-1/3 right-1/4 w-60 h-60 rounded-full bg-blue-500/15 blur-[80px] animate-float-slow"></div>
    
    <!-- Destellos adicionales -->
    <div class="absolute top-1/4 left-1/2 w-40 h-40 rounded-full bg-white/5 blur-[40px] animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/3 w-24 h-24 rounded-full bg-white/10 blur-[30px] animate-pulse-fast"></div>
  </div>
  
  <main class="relative pt-16 md:pt-20">
    <div class="relative">
      <SearchHero_elegante />

      <!-- Secci√≥n de categor√≠as destacadas -->
